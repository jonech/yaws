
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">
    <TextView
        android:id="@+id/text_bounty_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/text_bounty_job_enemy_lvls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_bounty_job_title"
        android:layout_alignParentLeft="true"/>

    <android.support.design.chip.ChipGroup
        android:id="@+id/chip_group_bounty_job_rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_bounty_job_enemy_lvls"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/image_bounty_job_standings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_standing"
        android:contentDescription=""
        style="?attr/IconImageStyle"
        android:layout_above="@id/chip_group_bounty_job_rewards"
        android:layout_toLeftOf="@id/text_bounty_job_standings"/>
    <TextView
        android:id="@+id/text_bounty_job_standings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chip_group_bounty_job_rewards"
        android:layout_alignParentRight="true"/>
</RelativeLayout>