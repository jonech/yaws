
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5pt"
    style="?attr/StatCardStyle">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5pt">
        <ImageView
            android:id="@+id/image_fissure_tier"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription=""
            style="?attr/IconImageStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/text_fissure_tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image_fissure_tier"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:id="@+id/text_fissure_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/text_fissure_tier"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:id="@+id/text_fissure_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_fissure_tier"
            android:layout_marginHorizontal="5dp"
            android:layout_below="@id/text_fissure_tier"/>
        <TextView
            android:id="@+id/text_fissure_enemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_fissure_tier"
            android:layout_toRightOf="@id/text_fissure_node"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:id="@+id/text_fissure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>