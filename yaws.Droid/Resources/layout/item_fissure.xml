<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5pt"
    style="?attr/StatCardStyle">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5pt">
        <TextView
            android:id="@+id/text_fissure_tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/text_fissure_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/text_fissure_tier"
            android:layout_marginHorizontal="10dp"/>
        <TextView
            android:id="@+id/text_fissure_enemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/text_fissure_mission"
            android:layout_marginHorizontal="10dp"/>
        <TextView
            android:id="@+id/text_fissure_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_fissure_tier"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/text_fissure_mission"/>
        <TextView
            android:id="@+id/text_fissure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>